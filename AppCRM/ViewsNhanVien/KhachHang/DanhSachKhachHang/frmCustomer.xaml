                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible"></Setter>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding cus_from}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <DockPanel Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="textCusfr" MouseLeftButtonUp="textCusfr_MouseLeftButtonUp">
                                                    <TextBlock Foreground="{DynamicResource #FFA800}" Text="(" FontSize="15" FontWeight="DemiBold"></TextBlock>
                                                    <TextBlock Foreground="{DynamicResource #FFA800}" Text="{Binding cus_from}" FontSize="15" FontWeight="DemiBold"></TextBlock>
                                                    <TextBlock Foreground="{DynamicResource #FFA800}" Text=")" FontSize="15" FontWeight="DemiBold"></TextBlock>
                                                </DockPanel>
                                            </Border>

                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
