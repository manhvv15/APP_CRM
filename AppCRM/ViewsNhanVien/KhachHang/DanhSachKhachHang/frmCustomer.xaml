                                    <DataTemplate>
                                        <TextBox BorderThickness="0" Cursor="IBeam" Text="{Binding email}" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" IsReadOnly="True"></TextBox>
