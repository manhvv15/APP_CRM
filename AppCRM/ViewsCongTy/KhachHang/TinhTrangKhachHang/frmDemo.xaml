<Window x:Class="AppCRM.Views.KhachHang.TinhTrangKhachHang.frmDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCRM.Views.KhachHang.TinhTrangKhachHang"
        mc:Ignorable="d"
        Title="frmDemo" Height="450" Width="800">
    <ListView ItemsSource="{Binding dt, RelativeSource={RelativeSource AncestorType=Window}}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding stt_id}" HorizontalAlignment="Center"></TextBlock>
                    <Border Width="70" Height="70" CornerRadius="10000" Background="Red"></Border>
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Window>
