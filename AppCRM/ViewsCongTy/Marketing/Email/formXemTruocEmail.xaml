<Page x:Class="AppCRM.Views.Marketing.Email.formXemTruocEmail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppCRM.Views.Marketing.Email"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="formXemTruocEmail">

    <Border Width="699">
        <StackPanel>
            <Border CornerRadius="10 10 0 0" Width="698" Height="50" Background="{DynamicResource #4C5BD4}">
                <DockPanel>
                    <TextBlock Text="{DynamicResource textXemTruoc}" Style="{StaticResource TextRowCenter}" Foreground="{DynamicResource #FFFFFF}" FontSize="16" FontWeight="Bold" Margin="257 0 0 0"></TextBlock>
                    <Path Data="{DynamicResource iconClose}" Fill="{DynamicResource #FFFFFF}" Margin="0 0 15 0" Height="17" Width="17" HorizontalAlignment="Right"></Path>
                </DockPanel>
            </Border>
            <Border Width="698" BorderThickness="0" Height="298" Background="{DynamicResource #FFFFFF}" CornerRadius="0 0 10 10">
                <TextBox Margin="20" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"></TextBox>
            </Border>
        </StackPanel>
    </Border>
</Page>
