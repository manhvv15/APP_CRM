                                    <TextBlock Text="Dùng chung:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chưa cập nhật" Foreground="{DynamicResource #CCCCCC}" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                            </StackPanel>
                            <StackPanel>
                                <DockPanel Margin="0 15">
                                    <TextBlock Text="Ngày tạo:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chưa cập nhật" Foreground="{DynamicResource #CCCCCC}" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                                <DockPanel Margin="0 15">
                                    <TextBlock Text="Ngày sửa:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chưa cập nhật" Foreground="{DynamicResource #CCCCCC}" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
