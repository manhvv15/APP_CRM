<Page x:Class="AppCRM.Views.ChienDich.formThongTinChiTiet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppCRM.Views.ChienDich"
      mc:Ignorable="d"
      Title="formThongTinChiTiet" Width="1311.5" Height="870.8">

    <Grid>
        <Border>
            <StackPanel>
                <Border Height="50" Background="{DynamicResource #4C5BD4}" CornerRadius="10 10 0 0">
                    <TextBlock Text="Thông tin chi tiết" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}" Foreground="{DynamicResource #FFFFFF}"></TextBlock>
