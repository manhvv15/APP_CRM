                                    <TextBlock Text="Kênh truyền thông:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chưa cập nhật" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
