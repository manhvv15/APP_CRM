                                    <TextBlock Text="Nhân viên phụ trách:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <DockPanel HorizontalAlignment="Right">
                                        <Border Height="26" Width="26" CornerRadius="100">
                                            <Border.Background>
                                                <ImageBrush ImageSource="D:\work\AppCRM\Resource\Img\rafiki.png"></ImageBrush>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Text="nhật minh" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                    </DockPanel>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                            </StackPanel>
                        </DockPanel>

                        <TextBlock Style="{StaticResource TextRowLeft}" Text="Thông tin mô tả" FontSize="20" FontWeight="SemiBold" TextDecorations="Underline" DockPanel.Dock="Top" Margin="10 0 0 15"></TextBlock>
                        <DockPanel Margin="0 15" HorizontalAlignment="Left">
                            <TextBlock Text="Mô tả:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                            <TextBlock Text="Chưa cập nhật" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                        </DockPanel>

                        <TextBlock Style="{StaticResource TextRowLeft}" Text="Thông tin hệ thống" FontSize="20" FontWeight="SemiBold" TextDecorations="Underline" DockPanel.Dock="Top" Margin="10 0 0 15"></TextBlock>
                        <DockPanel>
                            <StackPanel>
                                <DockPanel Margin="0 15">
                                    <TextBlock Text="Người tạo:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chưa cập nhật" Foreground="{DynamicResource #CCCCCC}" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                                <DockPanel Margin="0 15">
                                    <TextBlock Text="Người sửa:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chưa cập nhật" Foreground="{DynamicResource #CCCCCC}" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
