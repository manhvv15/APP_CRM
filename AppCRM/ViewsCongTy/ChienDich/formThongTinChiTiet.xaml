                                    <DockPanel Margin="0 15">
                                        <TextBlock Text="Ngày bắt đầu:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                        <TextBlock Text="07/08/2022" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                    </DockPanel>
                                    <DockPanel HorizontalAlignment="Right">
                                        <TextBlock Text="Ngày kết thúc:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                        <TextBlock Text="31/08/2022" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                    </DockPanel>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
