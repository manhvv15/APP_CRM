                            <StackPanel Margin="0 0 20 0">
                                <DockPanel Margin="0 15">
                                    <TextBlock Text="Tên chiến dịch:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Chiến dịch bán hàng online" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                                <DockPanel Margin="0 15">
                                    <TextBlock Text="Tình trạng:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                    <TextBlock Text="Đang tạm dừng" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
                                <DockPanel>
                                    <DockPanel Margin="0 15">
                                        <TextBlock Text="Ngân sách:" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                        <TextBlock Text="Đang tạm dừng" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                    </DockPanel>
                                    <DockPanel HorizontalAlignment="Right">
                                        <TextBlock Text="Doanh số" FontSize="16" FontWeight="SemiBold" Style="{StaticResource TextRowLeft}"></TextBlock>
                                        <TextBlock Text="Đang tạm dừng" FontSize="15" Style="{StaticResource TextRowRight}"></TextBlock>
                                    </DockPanel>
                                </DockPanel>
                                <Line Margin="0 10 0 0" X1="0" Y1="0" X2="645" Y2="0" Stroke="{DynamicResource #474747}" StrokeThickness="1" Canvas.Top="20" Canvas.Left="10" />
