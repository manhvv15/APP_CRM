                        </Border.Effect>
                    </Border>
                    <Border CornerRadius="10" Background="{DynamicResource #FFFFFF}">
                        <DockPanel>
                            <TextBlock Margin="5 0" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" Text="{DynamicResource textTinhTrang1}"></TextBlock>
