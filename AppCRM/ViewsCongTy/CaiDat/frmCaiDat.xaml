                    <TextBlock Text="Email" FontSize="15"  Margin="20,15,0,0" Foreground="{DynamicResource #474747}"></TextBlock>
                    <TextBlock Text="Sms Brandname" FontSize="15"  Margin="20,15,0,0" Foreground="{DynamicResource #474747}"></TextBlock>
                    <TextBlock Text="Tổng đài điện thoại" FontSize="15"  Margin="20,15,0,0" Foreground="{DynamicResource #474747}"></TextBlock>
                </StackPanel>
